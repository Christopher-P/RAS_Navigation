<!-- 
    ROS navigation stack with velocity smoother and safety (reactive) controller
    <remap from="map" to="GetMap"/>
-->
<launch>

  
  <arg name="odom_frame_id"   default="odom"/>
  <arg name="base_frame_id"   default="base_link"/>
  <arg name="global_frame_id" default="map"/>

 <!-- move_base -->
  <arg name="model" default="waffle"/>
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">


    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />

    <rosparam file="/home/ras/ras-chris/WorkSpace/costmap_common_params_waffle.yaml" command="load" ns="global_costmap" />
    <rosparam file="/home/ras/ras-chris/WorkSpace/costmap_common_params_waffle.yaml" command="load" ns="local_costmap" />
    <rosparam file="/home/ras/ras-chris/WorkSpace/local_costmap_params.yaml" command="load" />
    <rosparam file="/home/ras/ras-chris/WorkSpace/global_costmap_params.yaml" command="load" />
    <rosparam file="/home/ras/ras-chris/WorkSpace/move_base_params.yaml" command="load" />
    <rosparam file="/home/ras/ras-chris/WorkSpace/dwa_local_planner_params3.yaml" command="load" />

    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
   
  </node>


