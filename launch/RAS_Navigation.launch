<!-- Modified by Christopher Pereyda for the purpose of RAS-project -->

<launch>

  <!-- Our LiDAR outputs scan and cartographer accepts LaserScan topic names -->
  <remap from="scan" to="LaserScan"/>


  <arg name="config_file" default="/home/ras/ras-chris/WorkSpace/cartographer_params/Cartographer_params.lua"/>

  <node name="cartographer_assets_writer" pkg="cartographer_rd.os" required="true"
      type="cartographer_assets_writer" args="
          -configuration_directory /home/ras/ras-chris/WorkSpace/cartographer_params
          -configuration_basename Cartographer_params.lua

          -pose_graph_filename /home/ras/ras-chris/Data/do.pbstream"
      output="screen">
  </node>


  <!-- The main cartographer_node, it creates a link for map->odom and provides odom data-->
  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory /home/ras/ras-chris/WorkSpace/cartographer_params
          -configuration_basename Cartographer_params.lua"
      output="screen">
  </node>

  <!-- This node acctually sends out the occupancy grid for map topic-->
  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
type="cartographer_occupancy_grid_node" args="-resolution 0.05" />




  <!-- This is just to view what is happening, good for debugging whats not working -->
  <node name="rviz" pkg="rviz" type="rviz" required="true"
     args="-d /home/ras/ras-chris/WorkSpace/rviz/demo_3d.rviz"/>


  <!-- Move base -->
  <include file="/home/ras/ras-chris/WorkSpace/move_base_params/move_base_launcher.xml"/>
  <!-- These can be run seperatly, put here for all-in-one launch file -->

  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_robot.launch"/>
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch"/>

</launch>
